<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/some_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:text="@string/title"
            android:textSize="@dimen/text_size"
            android:textColor="@color/white"
            android:fontFamily="@font/ysregular"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_search"
            android:theme="@style/whiteButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_t_b"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:layout_marginRight="@dimen/margin_l_r"
            android:backgroundTint="@color/white"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/btn_radius"
            android:text="@string/btn_search"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"/>

        <Button
            android:id="@+id/btn_media"
            android:theme="@style/whiteButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_l_r"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:layout_marginRight="@dimen/margin_l_r"
            android:backgroundTint="@color/white"
            app:icon="@drawable/library"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/btn_radius"
            android:text="@string/btn_media"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"/>

        <Button
            android:id="@+id/btn_settings"
            android:theme="@style/whiteButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_l_r"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:layout_marginRight="@dimen/margin_l_r"
            android:layout_marginBottom="@dimen/margin_t_b"
            android:backgroundTint="@color/white"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/btn_radius"
            android:text="@string/btn_settings"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"/>
    </LinearLayout>

</LinearLayout>