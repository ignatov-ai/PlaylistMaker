<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backToMain"
            android:layout_width="@dimen/layerWidth24dp"
            android:layout_height="@dimen/layerHeight24dp"
            android:layout_marginStart="@dimen/marginStart24dp"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layerHeight24dp"
            android:layout_marginStart="@dimen/marginStart24dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ysregular"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size"
            android:text="@string/searchHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:layout_marginRight="@dimen/margin_l_r"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/search_bar">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="@dimen/searchIconWidth16dp"
                android:layout_height="@dimen/searchIconHeight16dp"
                android:layout_marginStart="@dimen/margin_l_r"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription"
                android:src="@drawable/magnifire_input_icon" />

            <EditText
                android:id="@+id/searchField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin8dp"
                android:layout_marginRight="@dimen/margin8dp"
                android:autofillHints=""
                android:background="@null"
                android:hint="@string/searchHeader"
                android:inputType="textAutoComplete"
                android:lines="1"
                android:maxLength="50"
                android:textColorHint="?attr/colorOnSecondaryContainer"
                android:textCursorDrawable="@drawable/color_cursor"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/searchClearBar"
                android:layout_width="@dimen/searchIconWidth16dp"
                android:layout_height="@dimen/searchIconHeight16dp"
                android:layout_marginRight="@dimen/margin_l_r"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trackListElement"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin16dp">

        <ImageView
            android:id="@+id/trackListElementIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:orientation="horizontal"
            app:srcCompat="@mipmap/trackListElementIcon_foreground" />
        <LinearLayout
            android:id="@+id/trackListMiddle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_l_r"
            android:layout_marginRight="@dimen/margin_l_r">
            <TextView
                android:id="@+id/trackListElementName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:textColor="@color/ypDark"
                android:textSize="16sp"
                android:text="Yesterday (Remastered 2009)"/>
            <LinearLayout
                android:id="@+id/trackListElementProperties"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/trackListElementPropertiesGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:textColor="@color/ypGray"
                    android:textSize="11sp"
                    android:text="Beatles"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dot"/>
                <TextView
                    android:id="@+id/trackListElementPropertiesTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:textColor="@color/ypGray"
                    android:textSize="11sp"
                    android:text="2:55"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/trackListElementNextArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin16dp"
            android:tint="@color/ypGray"
            android:src="@drawable/arrow_forward" />
    </LinearLayout>
    
    

</LinearLayout>