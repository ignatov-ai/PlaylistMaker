<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlistItemSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlistIconSmall"
        android:layout_width="@dimen/size44dp"
        android:layout_height="@dimen/size44dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin8dp"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistNameSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/text16sp"
            tools:text="Это самый лучший плейлист" />

        <TextView
            android:id="@+id/playlistTracksCountSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/text11sp"
            tools:text="100500 треков" />

    </LinearLayout>

</LinearLayout>