<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ysregular"
            android:text="@string/settings_header"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_text_block"
        android:orientation="horizontal"
        android:paddingEnd="8dp">

        <TextView
            style="@style/settingsTextRow"
            android:text="Тёмная тема"/>

        <Switch
            android:id="@+id/switchTheme"
            style="@style/settingsImageRow"
            android:trackTint="?attr/colorSurface"
            android:thumbTint="?attr/colorSurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_text_block">

        <TextView
            style="@style/settingsTextRow"
            android:text="Поделиться приложением"/>

        <ImageView
            android:id="@+id/share"
            style="@style/settingsImageRow"
            android:layout_marginRight="@dimen/margin_l_r"
            android:src="@drawable/share" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_text_block">

        <TextView
            style="@style/settingsTextRow"
            android:text="Написать в поддержку"/>

        <ImageView
            android:id="@+id/support"
            style="@style/settingsImageRow"
            android:src="@drawable/support" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_text_block">

        <TextView
            style="@style/settingsTextRow"
            android:text="Пользовательское соглашение"/>

        <ImageView
            android:id="@+id/userAgreement"
            style="@style/settingsImageRow"
            android:src="@drawable/arrow_forward" />
    </LinearLayout>

</LinearLayout>