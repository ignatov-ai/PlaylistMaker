<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="whiteButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ysregular</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin_t_b</item>
        <item name="android:layout_marginLeft">@dimen/margin_l_r</item>
        <item name="android:layout_marginRight">@dimen/margin_l_r</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
        <item name="android:textColor">?attr/textAppearanceLabelMedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="settingsTextRow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_l_r</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="settingsSwither" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_l_r</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="settingsImageRow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin_l_r</item>
    </style>

    <style name="refreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ysmedium</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/size56dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size14sp</item>
    </style>

    <style name="trackImage" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/btn_radius</item>
    </style>

    <style name="bottomNavMenu">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="itemIconTint">@color/bottom_nav_bar_icon</item>
        <item name="itemTextColor">@color/bottom_nav_bar_icon</item>
        <item name="itemTextAppearanceInactive">@style/text_bottom_navigation</item>
        <item name="itemTextAppearanceActive">@style/text_bottom_navigation</item>
    </style>

    <style name="text_bottom_navigation">
        <item name="fontFamily">@font/ysregular</item>
        <item name="android:textSize">@dimen/text12sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="tabBarNoCapsText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_new_playlist">
        <item name="fontFamily">@font/ysregular</item>
        <item name="android:textSize">@dimen/text12sp</item>
    </style>

    <style name="text_label_new_playlist">
        <item name="fontFamily">@font/ysregular</item>
        <item name="android:textSize">@dimen/text12sp</item>
    </style>

    <style name="TextInputLayoutNewPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_field</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin16dp</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">@color/ypBlue</item>
        <item name="hintTextAppearance">@style/text_label_new_playlist</item>
        <item name="android:textAppearance">@style/text_new_playlist</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextNewPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/size16dp</item>
        <item name="android:paddingEnd">@dimen/size16dp</item>
        <item name="android:paddingTop">@dimen/size16dp</item>
        <item name="android:paddingBottom">@dimen/size16dp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
    </style>

    <dimen name="text12sp">12sp</dimen>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/ypBlue</item>
    </style>
</resources>